#!/bin/bash
#PBS -k o
#PBS -l nodes=1:ppn=1,walltime=0:10:00

tract=`jq -r '.track' config.json`
type=`jq -r '.type' config.json`
new_param=`jq -r '.new_param' config.json`

mkdir -p tck

echo "Resampling tck file..."
singularity exec -e docker://brainlife/dipy:0.14 python ./resampling_tract.py -tract $tract -type $type -new_param $new_param -out 'tck/track.tck'

if [ -f 'tck/track.tck' ]; then 
    echo "Resampling done."
else 
    echo "Resampling failed."
    exit 1
fi

echo "Complete"
